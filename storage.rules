rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Coffee images - only admins can upload
    match /coffee-images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null &&
                     exists(/databases/threshingfloorcompanies-570a3/documents/users/$(request.auth.uid)) &&
                     get(/databases/threshingfloorcompanies-570a3/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
